{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env.development"

        },
        {
            "name": "Local Debug FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8080",
            ],
            "jinja": true,
            "envFile": "${workspaceFolder}/.env.development",
            "console": "integratedTerminal",
            "justMyCode": false,
        }
    ]
}
